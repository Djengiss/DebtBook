<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Debt_Book.Views.DebtorDetailsPage"
             Title="DebtorDetailsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <BoxView Grid.Row="0"
             Grid.ColumnSpan="2"
             Color="white" />
        <Label
            Text="bla bla"
            HorizontalOptions="Center"
            FontSize="32"
            TextColor="black"/>


        <BoxView Grid.Row="1"
           Grid.ColumnSpan="2"
           Color="white" />
        <Frame Grid.Row="1"
            Grid.ColumnSpan="1"
            Grid.Column="1"
            HeightRequest="75"
            BackgroundColor="Transparent"
            Padding="0"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            HasShadow="False">
            <Entry Placeholder="Value"
                x:Name="valueEntry"
                WidthRequest="200"
                FontSize="48"
                TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </Frame>
        <Frame Grid.Row="1"
                Grid.ColumnSpan="1"
                Grid.Column="0"
               HeightRequest="400"
                BackgroundColor="Transparent"
                Padding="0"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                HasShadow="False">
            <Entry Placeholder="Name"
               Text="Name"
               x:Name="nameEntry"
               WidthRequest="500"
               FontSize="48"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        </Frame>
        <Button Grid.Row="1"
                Grid.ColumnSpan="1"
                Grid.Column="2"
                Margin="0,0,0,150"
                x:Name="CreditBtn"
                HeightRequest="75"
                WidthRequest="200"
                Text="Add"
                Command="{Binding SaveCommand}"
                HorizontalOptions="Center"
                VerticalOptions="Center" 
                />
        <Button Grid.Row="1"
            Grid.ColumnSpan="1"
            Grid.Column="2"
            Margin="0,0,0,150"
            x:Name="DebtBtn"
            HeightRequest="75"
            WidthRequest="200"
            Text="Add"
            Command="{Binding SaveCommand}"
            HorizontalOptions="Center"
            VerticalOptions="End" 
        />

        <BoxView Grid.Row="2"
           Grid.ColumnSpan="2"
           Color="white" />
        <Button Grid.Row="2"
            x:Name="CloseBtn"
            
            HeightRequest="75"
            WidthRequest="200"
            Grid.Column="0"
            Text="Close"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />

    </Grid>
</ContentPage>